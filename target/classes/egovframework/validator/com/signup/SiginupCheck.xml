<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">
    
<form-validation>

    <formset>
		<form name="userVO">
			<field property="email" depends="required, email">
        		<arg0 key="이메일" resource="true"/>
			</field>
			<field property="name" depends="required">
        		<arg0 key="유저이름" resource="true"/>
			</field>
			<field property="loginId" depends="required">
        		<arg0 key="아이디" resource="true"/>
			</field>
			<field property="password" depends="required">
        		<arg0 key="비밀번호" resource="true"/>
			</field>
			<field property="passwordConfirm" depends="required">
        		<arg0 key="비밀번호 확인" resource="true"/>
			</field>
		</form>
    </formset>

</form-validation>